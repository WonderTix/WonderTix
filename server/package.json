{
  "name": "wtix-backend",
  "version": "1.0.0",
  "description": "WonderTix Server (Backend)",
  "main": "server.js",
  "scripts": {
    "build": "npx tsc -p ./tsconfig.json",
    "prestart": "npm run prisma:init && npm run build",
    "start": "node ./bin/src/server.js",
    "test": "echo -e 'Tests are disabled temporarily'",
    "predev": "npm run prisma:init",
    "dev": "nodemon --exec npx ts-node ./src/server.ts",
    "test:jest": "npx jest --config ./jest.config.js",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "prisma:init": "prisma generate && prisma migrate deploy && prisma db seed"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@prisma/client": "^5.6.0",
    "axios": "^1.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-oauth2-jwt-bearer": "^1.6.0",
    "express-session": "^1.17.3",
    "helmet": "^7.0.0",
    "js-yaml": "^4.1.0",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "stripe": "^14.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.5",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/express-session": "^1.17.9",
    "@types/morgan": "^1.9.7",
    "@types/node": "20.8.7",
    "@types/pg": "^8.10.7",
    "@types/swagger-jsdoc": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.5",
    "@types/ws": "^8.5.8",
    "@types/yamljs": "^0.2.33",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.52.0",
    "eslint-config-google": "^0.14.0",
    "nodemon": "^3.0.1",
    "prisma": "^5.6.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2"
  }
}
