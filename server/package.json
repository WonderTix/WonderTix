{
  "name": "wtix-backend",
  "version": "1.0.0",
  "description": "WonderTix Server (Backend)",
  "main": "server.js",
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "prisma:init-seed": "prisma generate && prisma migrate deploy && prisma db seed",
    "prisma:init-seed-max": "prisma generate && prisma migrate deploy && node --max-old-space-size=4096 ./node_modules/.bin/ts-node prisma/seed.ts",
    "start": "npm run prisma:init-seed-max && nodemon --exec npx ts-node ./src/server.ts",
    "test": "echo -e 'Tests are disabled temporarily'",
    "test:jest": "npx jest --config ./jest.config.js"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.7.0",
    "@prisma/client": "^5.5.2",
    "@types/supertest": "^2.0.12",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-oauth2-jwt-bearer": "^1.5.0",
    "express-session": "^1.17.3",
    "helmet": "^7.0.0",
    "js-yaml": "^4.1.0",
    "json-refs": "^3.0.15",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.2",
    "reflect-metadata": "^0.1.13",
    "stripe": "^12.17.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "tslib": "^2.6.1",
    "ws": "^8.16.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.4.8",
    "@types/pg": "^8.10.2",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/ws": "^8.5.5",
    "@types/yamljs": "^0.2.31",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "eslint": "^8.46.0",
    "eslint-config-google": "^0.14.0",
    "nodemon": "^3.0.1",
    "prisma": "^5.5.2",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
